<h2> <%= @project.name %> </h2>

<table class="table table-condensed">
	<thead>
		<tr>
			<th> id </th>
			<th> Name </th>
			<th> Queue Type</th>
			<th> Created </th>
			<th> Action </th>
		<tr>
	</thead>
	<tbody>
		<% @gopher_queues.each_with_index do |gq, index| %>
			<tr>
				<td> <%= (index + 1) %> </td>
				<td> <%= gq.name %> </td>
				<td> <%= gq.queuetype %> </td>
				<td> <%= time_ago_in_words(gq.created_at) %> </td>
				<td> <%= link_to "Jobs", queue_jobs_url(gq, :application_id => @project.application_id) %> |
					 <%= link_to "Subscribers", subscriptions_project_queues_url(@project.application_id, gq) %>
				</td>
			</tr>
		<% end %>
	</tbody> 
</table>

<div class="pagination">
	<%= paginate @gopher_queues %>
</div>


<%= link_to "Add a queue", "#" %>